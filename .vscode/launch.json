    "version": "0.2.0",
    "configurations": [
        // debug
        // 1. npm scripts -> debug
        // npm run "npm run start:dev"
        {
            "name": "debug nest",
            "request": "launch",
            "runtimeArgs": [
                "run",
                "start:dev"
            ],
            "runtimeExecutable": "npm",
            "skipFiles": [
                "<node_internals>/**"
            ],
            "type": "node",
            "console": "integratedTerminal"
        }
    ]
}